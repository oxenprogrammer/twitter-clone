<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/64x64.png" alt="profile">
      </p>
    </figure>
    <div class="media-content"></div>
  </article>
</div>

<% @tweeets.each do |tweeet| %>
  <div class="box column">
    <article class="media column">
      <div class="media-left">
        <figure class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/64x64.png" alt="profile">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong>Emanuel Okello</strong>
          <small>@ox_emmy</small>
          <p><%= tweeet.tweeet %></p>
        </div>
      </div>
      <nav class="level">
        <div class="level-left is-mobile">
          <%= link_to  tweeet, class: "level-item" do %>
            <span class="icon"><i class="fa fa-link"  aria-hidden="true"></i></span>
          <% end %>
          <%= link_to edit_tweeet_path(tweeet), class: "level-item" do %>
            <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
          <% end %>
          <%= link_to tweeet, method: :delete, data: { confirm: "Are you sure you want to delete this tweet?"} do %>
            <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
          <% end %>
        </div>
      </nav>
    </article>
  </div>
<% end %>
